{
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["*.css", "*.scss", "*.sass", "*.less"],
      "options": {
        "singleQuote": false,
        "printWidth": 120
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 120,
        "bracketSameLine": false
      }
    }
  ]
}
